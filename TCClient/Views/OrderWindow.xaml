<Window x:Class="TCClient.Views.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCClient.Views"
        xmlns:controls="clr-namespace:TCClient.Views.Controls"
        xmlns:utils="clr-namespace:TCClient.Utils"
        mc:Ignorable="d"
        Title="下单" 
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <utils:PercentToDecimalConverter x:Key="PercentToDecimalConverter"/>
        <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <utils:PnLColorConverter x:Key="PnLColorConverter"/>
        
        <!-- 按钮样式 -->
        <Style x:Key="PeriodButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 上方区域：下单表单和推仓信息 -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧下单参数 -->
            <GroupBox Grid.Column="0" Header="下单交易参数" Margin="0,0,10,0" MinHeight="600">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/> <!-- 固定左侧文字列宽度 -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 合约输入 -->
                    <TextBlock Text="合约：" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" HorizontalAlignment="Right"/>
                    <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ContractTextBox" Grid.Column="0" Margin="0,0,5,0" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
                        <Button x:Name="QueryContractButton" Grid.Column="1" Content="查询" Width="80" Height="30" FontSize="14" Click="QueryContractButton_Click"/>
                    </Grid>

                    <!-- 交易方向 -->
                    <TextBlock Text="方向：" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" HorizontalAlignment="Right"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,30" Height="30">
                        <RadioButton Content="买入" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center" FontSize="14"/>
                        <RadioButton Content="卖出" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>

                    <!-- 订单类型 -->
                    <TextBlock Text="类型：" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" HorizontalAlignment="Right"/>
                    <ComboBox x:Name="OrderTypeComboBox" 
                             Grid.Row="2" Grid.Column="1" 
                             Margin="0,0,0,30" 
                             Width="150" 
                             Height="30"
                             FontSize="14"
                             HorizontalAlignment="Left"
                             VerticalContentAlignment="Center"
                             SelectionChanged="OrderTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="市价下单" IsSelected="True"/>
                        <ComboBoxItem Content="条件单"/>
                    </ComboBox>

                    <!-- 条件单设置 (初始隐藏) -->
                    <Grid x:Name="ConditionalOrderGrid" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,30" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 条件类型 -->
                        <TextBlock Text="条件类型：" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,10" FontSize="14" HorizontalAlignment="Right"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton x:Name="BreakUpRadio" Content="向上突破" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center" FontSize="14" GroupName="ConditionType"/>
                            <RadioButton x:Name="BreakDownRadio" Content="向下突破" VerticalAlignment="Center" FontSize="14" GroupName="ConditionType"/>
                        </StackPanel>

                        <!-- 触发价格 -->
                        <TextBlock Text="触发价格：" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" HorizontalAlignment="Right"/>
                        <TextBox x:Name="TriggerPriceTextBox" 
                                Grid.Row="1" Grid.Column="1" 
                                Width="150"
                                Height="30"
                                FontSize="14"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"/>
                    </Grid>

                    <!-- 开仓数量 -->
                    <TextBlock Text="数量：" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" HorizontalAlignment="Right"/>
                    <TextBox x:Name="QuantityTextBox" 
                            Grid.Row="4" Grid.Column="1" 
                            Margin="0,0,0,30"
                            Width="150"
                            Height="30"
                            FontSize="14"
                            HorizontalAlignment="Left"
                            VerticalContentAlignment="Center"
                            Text="{Binding OrderQuantity, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- 开仓价格 -->
                    <TextBlock Text="价格：" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" HorizontalAlignment="Right"/>
                    <TextBox x:Name="PriceTextBox" 
                            Grid.Row="5" Grid.Column="1" 
                            Margin="0,0,0,30"
                            Width="150"
                            Height="30"
                            FontSize="14"
                            HorizontalAlignment="Left"
                            VerticalContentAlignment="Center"
                            Text="{Binding LatestPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextChanged="PriceTextBox_TextChanged"/>

                    <!-- 止损设置 -->
                    <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 止损标题 -->
                        <TextBlock Text="止损设置：" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" HorizontalAlignment="Right"/>

                        <!-- 止损比例 -->
                        <TextBlock Text="比例：" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>
                        <TextBox x:Name="StopLossPercentageTextBox" 
                                Grid.Column="2" 
                                Width="80" 
                                Height="30"
                                FontSize="14"
                                Margin="0,0,15,0"
                                VerticalContentAlignment="Center"
                                TextChanged="StopLossPercentageTextBox_TextChanged"/>

                        <!-- 止损价格 -->
                        <TextBlock Text="价格：" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>
                        <TextBox x:Name="StopLossPriceTextBox" 
                                Grid.Column="4" 
                                Width="80" 
                                Height="30"
                                FontSize="14"
                                Margin="0,0,15,0"
                                VerticalContentAlignment="Center"
                                TextChanged="StopLossPriceTextBox_TextChanged"/>

                        <!-- 止损金额 -->
                        <TextBlock Text="金额：" Grid.Column="5" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>
                        <TextBox x:Name="StopLossAmountTextBox" 
                                Grid.Column="6" 
                                Width="80" 
                                Height="30"
                                FontSize="14"
                                Margin="0,0,5,0"
                                VerticalContentAlignment="Center"
                                TextChanged="StopLossAmountTextBox_TextChanged"/>
                        
                        <!-- 调整按钮 -->
                        <StackPanel Grid.Column="7" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="-" Width="30" Height="30" Margin="0,0,2,0" Click="DecreaseStopLossAmount_Click" FontSize="14"/>
                            <Button Content="+" Width="30" Height="30" Margin="0,0,15,0" Click="IncreaseStopLossAmount_Click" FontSize="14"/>
                        </StackPanel>

                        <!-- 以损定量按钮 -->
                        <Button Content="以损定量" 
                                Grid.Column="8"
                                Width="120" 
                                Height="30"
                                FontSize="14"
                                Margin="0,0,0,0"
                                Click="CalculateQuantityByStopLoss_Click"/>
                    </Grid>

                    <!-- 杠杆设置 -->
                    <TextBlock Text="杠杆：" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" HorizontalAlignment="Right"/>
                    <Grid Grid.Row="7" Grid.Column="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 杠杆输入框 -->
                        <TextBox x:Name="LeverageTextBox" 
                                Grid.Column="0" 
                                Text="3" 
                                Width="80"
                                Height="30"
                                FontSize="14"
                                Margin="0,0,15,0"
                                VerticalContentAlignment="Center"
                                TextChanged="LeverageTextBox_TextChanged"/>

                        <!-- 杠杆快捷按钮 -->
                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal"
                                  Height="30"
                                  VerticalAlignment="Center">
                            <Button Content="1x" Style="{StaticResource PeriodButtonStyle}" 
                                    Click="LeverageButton_Click" Tag="1" Margin="0,0,5,0" Height="30" FontSize="14"/>
                            <Button Content="3x" Style="{StaticResource PeriodButtonStyle}" 
                                    Click="LeverageButton_Click" Tag="3" Margin="0,0,5,0" Height="30" FontSize="14" Background="LightBlue"/>
                            <Button Content="5x" Style="{StaticResource PeriodButtonStyle}" 
                                    Click="LeverageButton_Click" Tag="5" Margin="0,0,5,0" Height="30" FontSize="14"/>
                            <Button Content="10x" Style="{StaticResource PeriodButtonStyle}" 
                                    Click="LeverageButton_Click" Tag="10" Margin="0,0,5,0" Height="30" FontSize="14"/>
                            <Button Content="20x" Style="{StaticResource PeriodButtonStyle}" 
                                    Click="LeverageButton_Click" Tag="20" Margin="0,0,5,0" Height="30" FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- 账户信息 -->
                    <TextBlock Text="账户信息：" Grid.Row="8" Grid.Column="0" VerticalAlignment="Top" Margin="0,5,5,0" FontSize="14" HorizontalAlignment="Right"/>
                    <Grid Grid.Row="8" Grid.Column="1" Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 第一行 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="总权益：" Margin="0,0,5,10" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock x:Name="TotalEquityTextBlock" Grid.Row="0" Grid.Column="1" Text="0.00" VerticalAlignment="Center" FontSize="14" Margin="0,0,20,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="可用余额：" Margin="0,0,5,10" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock x:Name="AvailableBalanceTextBlock" Grid.Row="0" Grid.Column="3" Text="0.00" VerticalAlignment="Center" FontSize="14" Margin="0,0,0,10"/>

                        <!-- 第二行 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="持仓保证金：" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock x:Name="PositionMarginTextBlock" Grid.Row="1" Grid.Column="1" Text="0.00" VerticalAlignment="Center" FontSize="14" Margin="0,0,20,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="未实现盈亏：" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock x:Name="UnrealizedPnLTextBlock" Grid.Row="1" Grid.Column="3" Text="0.00" VerticalAlignment="Center" FontSize="14"/>
                    </Grid>

                    <!-- 下单和取消按钮 -->
                    <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                              Orientation="Horizontal" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,0"
                              VerticalAlignment="Center">
                        <Button Content="下单" Width="120" Height="35" Margin="0,0,30,0" Click="PlaceOrderButton_Click" FontSize="14"/>
                        <Button Content="取消" Width="120" Height="35" Click="CancelButton_Click" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- 中间分隔线 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- 右侧推仓信息 -->
            <GroupBox Grid.Column="2" Header="推仓信息" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 推仓汇总信息 -->
                    <Grid Grid.Row="0" Margin="20,20,20,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 第一行 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="总浮动盈亏：" Margin="0,0,5,10" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalFloatingPnL, StringFormat={}{0:N2}}" 
                                 Foreground="{Binding TotalFloatingPnL, Converter={StaticResource PnLColorConverter}}" 
                                 Margin="0,0,20,10" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="总实际盈亏：" Margin="0,0,5,10" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding TotalRealPnL, StringFormat={}{0:N2}}" 
                                 Foreground="{Binding TotalRealPnL, Converter={StaticResource PnLColorConverter}}" 
                                 Margin="0,0,0,10" VerticalAlignment="Center" FontSize="14"/>

                        <!-- 第二行 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="订单总数：" Margin="0,0,5,10" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PushSummary.TotalOrderCount}" Margin="0,0,20,10" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="持仓中：" Margin="0,0,5,10" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding PushSummary.OpenOrderCount}" Margin="0,0,0,10" VerticalAlignment="Center" FontSize="14"/>

                        <!-- 第三行 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="占用风险金：" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PushSummary.RiskAmount, StringFormat={}{0:N2}}" Margin="0,0,20,0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="可用风险金：" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding PushSummary.AvailableRiskAmount, StringFormat={}{0:N2}}" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                    </Grid>

                    <!-- 订单列表 -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding PushSummary.Orders}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="10,10,10,20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="订单ID" Binding="{Binding OrderId}" Width="100"/>
                            <DataGridTextColumn Header="方向" Binding="{Binding Direction}" Width="60"/>
                            <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="开仓价" Binding="{Binding EntryPrice, StringFormat={}{0:N2}}" Width="100"/>
                            <DataGridTextColumn Header="止损价" Binding="{Binding CurrentStopLoss, StringFormat={}{0:N2}}" Width="100"/>
                            <DataGridTextColumn Header="当前价" Binding="{Binding CurrentPrice, StringFormat={}{0:N2}}" Width="100"/>
                            <DataGridTextColumn Header="浮动盈亏" Binding="{Binding FloatingPnL, StringFormat={}{0:N2}, TargetNullValue=0.00}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{Binding FloatingPnL, Converter={StaticResource PnLColorConverter}, TargetNullValue=White}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="实际盈亏" Binding="{Binding RealPnL, StringFormat={}{0:N2}, TargetNullValue=0.00}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{Binding RealPnL, Converter={StaticResource PnLColorConverter}, TargetNullValue=White}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80"/>
                            <DataGridTextColumn Header="开仓时间" Binding="{Binding OpenTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="150"/>
                            <DataGridTextColumn Header="平仓时间" Binding="{Binding CloseTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- 下方K线图区域 -->
        <Grid Grid.Row="1" Margin="20,10,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- K线图周期按钮组 -->
            <Border Grid.Row="0" 
                    BorderBrush="#FF3E3E3E" 
                    BorderThickness="1" 
                    Background="#FF1E1E1E"
                    Margin="0,0,0,10"
                    Padding="10">
                <StackPanel Orientation="Horizontal">
                    <Button Content="1分钟" Style="{StaticResource PeriodButtonStyle}" Click="PeriodButton_Click" Tag="1m" Background="LightBlue"/>
                    <Button Content="5分钟" Style="{StaticResource PeriodButtonStyle}" Click="PeriodButton_Click" Tag="5m"/>
                    <Button Content="15分钟" Style="{StaticResource PeriodButtonStyle}" Click="PeriodButton_Click" Tag="15m"/>
                    <Button Content="30分钟" Style="{StaticResource PeriodButtonStyle}" Click="PeriodButton_Click" Tag="30m"/>
                    <Button Content="1小时" Style="{StaticResource PeriodButtonStyle}" Click="PeriodButton_Click" Tag="1h"/>
                    <Button Content="4小时" Style="{StaticResource PeriodButtonStyle}" Click="PeriodButton_Click" Tag="4h"/>
                    <Button Content="日线" Style="{StaticResource PeriodButtonStyle}" Click="PeriodButton_Click" Tag="1d"/>
                    <Button Content="周线" Style="{StaticResource PeriodButtonStyle}" Click="PeriodButton_Click" Tag="1w"/>
                </StackPanel>
            </Border>

            <!-- K线图控件 -->
            <controls:KLineChartControl x:Name="KLineChartControl" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window> 