                        <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,8L16,12L12,16L8,12L12,8M12,10.5L10.5,12L12,13.5L13.5,12L12,10.5Z" 
                              Fill="Black" 
                              Stretch="Uniform" 
                              Width="16" 
                              Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="服务管理器" 
