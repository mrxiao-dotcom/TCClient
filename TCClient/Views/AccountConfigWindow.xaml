<Window x:Class="TCClient.Views.AccountConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="账户配置" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10">
            <Button Content="添加账户" 
                    Command="{Binding AddAccountCommand}"
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="删除账户" 
                    Command="{Binding DeleteAccountCommand}"
                    Width="100" 
                    Height="30"/>
        </StackPanel>

        <!-- 账户列表 -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Accounts}"
                  SelectedItem="{Binding SelectedAccount}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="账户名称" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="账户类型" Binding="{Binding Type}" Width="*"/>
                <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="创建时间" Binding="{Binding CreateTime}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="确定" 
                    Command="{Binding SaveCommand}"
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="取消" 
                    Command="{Binding CancelCommand}"
                    Width="100" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window> 